---
import type { IconName } from "@core/icon";
import Icon from "./Icon.astro";

interface Props {
  id: string;
  label?: string;
  icon?: IconName;
  class?: string;
}

const { class: className, id, label, icon } = Astro.props;
---

<section
  id={id}
  data-section={id}
  class={`section ${className} scroll-m-20 w-full mx-auto container px-4 mb-20 lg:max-w-4xl md:max-w-2xl`}
>
  {
    label && (
      <h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
        {icon && <Icon icon={icon} />}
        {label}
      </h2>
    )
  }
  <slot />
</section>
